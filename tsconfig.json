{
	"compilerOptions": {
		"target": "es6",
		"module": "es2020",
		"lib": ["ES2021", "DOM"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node"
	},
	"include": ["index.ts"],
	"exclude": ["node_modules", "dist"]
}
